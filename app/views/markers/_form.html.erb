<%= form_for @marker do |f| %>
  <% if @marker.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @marker.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="">
    <%= f.label :marker_type %><br />
    <%= f.text_field :marker_type %>
  </div>
  <div class="">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="">
    <%= f.label :rating %><br />
    <%= f.number_field :rating %>
  </div>
  <div class="">
    <%= f.label :img_url %><br />
    <%= f.text_field :img_url %>
  </div>
  <div class="">
    <%= f.label :yelp_id %><br />
    <%= f.text_field :yelp_id %>
  </div>
  <div class="">
    <%= f.label :latitude %><br />
    <%= f.number_field :latitude, :step => 'any' %>
  </div>
  <div class="">
    <%= f.label :longitude %><br />
    <%= f.number_field :longitude, :step => 'any' %>
  </div>
  <div class="button"><%= f.submit %></div>
<% end %>
</div>
